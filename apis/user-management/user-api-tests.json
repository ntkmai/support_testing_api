{
  "name": "User Management API Tests",
  "baseUrl": "http://localhost:3000",
  "requests": [
    {
      "id": "get-all-users",
      "name": "Get All Users",
      "method": "GET",
      "endpoint": "/api/users",
      "description": "Lấy danh sách tất cả người dùng trong hệ thống",
      "headers": {
        "Authorization": "Bearer YOUR_TOKEN_HERE"
      }
    },
    {
      "id": "get-user-by-id",
      "name": "Get User By ID",
      "method": "GET",
      "endpoint": "/api/users/1",
      "description": "Lấy thông tin chi tiết của một người dùng theo ID",
      "headers": {
        "Authorization": "Bearer YOUR_TOKEN_HERE"
      }
    },
    {
      "id": "create-user",
      "name": "Create New User",
      "method": "POST",
      "endpoint": "/api/users",
      "description": "Tạo người dùng mới trong hệ thống",
      "headers": {
        "Authorization": "Bearer YOUR_TOKEN_HERE"
      },
      "body": {
        "username": "newuser",
        "email": "newuser@example.com",
        "password": "SecurePass123",
        "role": "user"
      }
    },
    {
      "id": "update-user",
      "name": "Update User",
      "method": "PUT",
      "endpoint": "/api/users/1",
      "description": "Cập nhật thông tin người dùng",
      "headers": {
        "Authorization": "Bearer YOUR_TOKEN_HERE"
      },
      "body": {
        "username": "updateduser",
        "email": "updated@example.com"
      }
    },
    {
      "id": "delete-user",
      "name": "Delete User",
      "method": "DELETE",
      "endpoint": "/api/users/1",
      "description": "Xóa người dùng khỏi hệ thống",
      "headers": {
        "Authorization": "Bearer YOUR_TOKEN_HERE"
      }
    }
  ]
}
