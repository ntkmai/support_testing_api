      "headers": {
        "Authorization": "Bearer YOUR_TOKEN_HERE"
      }
    },
    {
      "name": "Create New",
      "method": "POST",
      "endpoint": "/api/items",
      "description": "## Mục đích\nTạo item mới\n\n## Thông tin cần thiết\n- name: Tên item\n- value: Giá trị\n- status: Trạng thái",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer YOUR_TOKEN_HERE"
      },
      "body": {
        "name": "Item Name",
        "value": 100,
        "status": "active"
      },
      "templates": [
        {
          "name": "Active Item",
          "description": "Tạo item với trạng thái active",
          "body": {
            "name": "New Active Item",
            "value": 100,
            "status": "active"
          }
        },
        {
          "name": "Pending Item",
          "description": "Tạo item với trạng thái pending",
          "body": {
            "name": "New Pending Item",
            "value": 50,
            "status": "pending"
          }
        }
      ]
    },
    {
      "name": "Update",
